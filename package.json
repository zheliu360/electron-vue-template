{
  "name": "electron-vue-template",
  "version": "0.0.0",
  "description": ".",
  "author": "zheliu",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "vite",
    "dist": "vite build",
    "start": "electron .",
    "release": "electron-builder",
    "release:publish": "electron-builder --publish=always"
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "vue": "^3.5.27",
    "vue-router": "^5.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "vite": "^7.3.1",
    "vite-plugin-vue-devtools": "^8.0.5"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "build": {
    "icon": "icon",
    "appId": "com.zheliu360.electron-vue-template",
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "zheliu360",
        "repo": "electron-vue-template",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "include": "installer.nsh"
    }
  }
}
